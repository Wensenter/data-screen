@import './common.styl'
.wrap
    background url('../img/electronic_personnel_file/bg.png') 100% 100% no-repeat
.head
    position unset !important
.body
    width 1880px
    height 790px
    margin 18px auto 0
    padding 9px 36px 24px
    display flex
    background url('../img/electronic_personnel_file/border.png') no-repeat
    background-size 100% 100%
.left
    width 435px
    margin-right 35px
    .swiper-container
        height 229px
        margin-top 22px
        .img-shadow
            display block
            position relative
            top 50%
            left 50%
            transform translate(-50%,-50%)
            width 162px
            height 183px
            user-select none
            &:after
                content ''
                position absolute
                top 0
                left 0
                width 100%
                height 100%
                background rgba(0,0,0,0.3)
            img
                width 100%
                height 100%
                margin auto
                user-select none
        .swiper-slide-active
            .img-shadow
                position relative
                width 204px
                height 230px
                z-index 1000
                &:after
                    background transparent
    .risk
        width 435px
        height 145px
        margin-top 8px
        display flex
        background url('../img/electronic_personnel_file/risk-border.png') no-repeat
        background-size 100% 100%
        cursor pointer
        .high
            width 63px
            height 70px
            margin 48px 19px 28px 22px
            background url('../img/electronic_personnel_file/risk.png') no-repeat
            background-size 100% 100%
            line-height 60px
            text-align center
            font-size 26px
            font-weight bold
            color #fff
        .risk-ctx
            margin-top 46px
            margin-right 27px
            margin-bottom 30px
            width 233px
            height 104px
            font-size 0
            .name
                float left
                font-size 24px
                color #CEE6EA
                display inline-block
            .number
                float right
                font-size 58px
                color #F52020
                font-family 'Regular'
                margin-top -10px
            .progress-bar
                float left
                margin-top 12px
                position relative
                width 233px
                height 10px
                background #01394C
                .progress
                    position absolute
                    left 0
                    top 0
                    height 10px
                    width 50%
                    background #F52020
        .arrow
            margin-top 43px
            margin-right 22px
            margin-bottom 32px
            width 49px
            height 72px
            >img 
                width 49px
                height 31px
            .num
                font-size 40px
                color #11C6A2
    .video
        width 434px
        height 190px
        border 2px solid #117385
        box-shadow 0 0 10px#117385 inset
        margin-top 10px
        position relative
        cursor pointer
        .play
            position absolute
            top 50%
            left 50%
            transform translate(-50%,-50%)
            width 40px
            height 40px
            border-radius 50%
            background #34F8FF
            cursor pointer
            &:after
                position absolute
                top 50%
                left calc(50% + 7px)
                transform translate(-50%,-50%)
                content ''
                display block
                width 0
                height 0
                border-top 10px solid transparent
                border-right 10px solid transparent
                border-bottom 10px solid transparent
                border-left 12px solid #016079
        video
            position absolute
            width 100%
            height 100%
    .audio
        width 434px
        height 130px
        border 2px solid #117385
        box-shadow 0 0 10px#117385 inset
        margin-top 10px
        position relative
        cursor pointer
        audio
            position absolute
            width 100%
            height 100%
        .audio-img
            width 100% 
            height 100%
            background url('../img/electronic_personnel_file/voiceprint.png') no-repeat
            background-size 100% 100%
            .play
                position absolute
                top 50%
                left 50%
                transform translate(-50%,-50%)
                width 40px
                height 40px
                border-radius 50%
                background #34F8FF
                cursor pointer
                &:after
                    position absolute
                    top 50%
                    left calc(50% + 7px)
                    transform translate(-50%,-50%)
                    content ''
                    display block
                    width 0
                    height 0
                    border-top 10px solid transparent
                    border-right 10px solid transparent
                    border-bottom 10px solid transparent
                    border-left 12px solid #016079
    .playing
        .play
            display none
.right 
    width 1320px
    .table
        width 100%
        height 100%
        position relative
        display flex
        .table-line1
            width 190px
            height 100%
            background url('../img/public/vline.png') 189px 0 no-repeat
            background-size 100% 100%
        .table-line2
            width 282px
            height 100%
            background url('../img/public/vline.png') 281px 0 no-repeat
            background-size 100% 100%
        .table-line3
            width 230px
            height 100%
            background url('../img/public/vline.png') 229px 0 no-repeat
            background-size 100% 100%
        >table
            position absolute
            top 0
            left 0
            width 100%
            tr
                background url('../img/public/hline.png') bottom center no-repeat
                background-size 100% 1px
            td
                font-size 20px
                box-sizing border-box
                height 87px
                max-height 87px
                div 
                    position relative
                    width 100%
                    height 100%
                    overflow-y scroll
                    overflow-x hidden
                    vertical-align middle
                    display flex
                    align-items center
            td:nth-child(1)
                color #20C6E3
                width 186px
                padding 10px 15px 10px 0
                text-align right
            td:nth-child(2)
                color #ffffff
                width 280px
                padding 10px 0 10px 30px
                text-align left
            td:nth-child(3)
                color #20C6E3
                width 228px
                padding 10px 15px 10px 0
                text-align right
            td:nth-child(4)
                color #ffffff
                width 613px
                padding 10px 0 12px 30px
                text-align left
.menu-list
    background url('../img/electronic_personnel_file/border2.png') no-repeat
    background-size 100% 100%
    width 1880px
    height 140px
    margin 10px auto 0
    padding 0 70px
    ul
        height 140px
        font-size 0
        display flex
        justify-content space-between
        align-items center
        li>a
            font-size 0
            display flex
            flex-direction column
            align-items center
            justify-content center
            text-decoration none
            .icon
                width 67px
                height 76px
                background-size 100% 100%
                background-repeat no-repeat
                &:hover
                    background-repeat no-repeat
            .icon-text
                margin 0
                margin-top  11px
                font-size 22px
                color #CEE6EA
            for i in 1 2 3 4 5 6 7 8
                img-url = '../img/electronic_personnel_file/menu'+i+'.png'
                hover-img-url = '../img/electronic_personnel_file/menu'+i+'-hover.png'
                .icon{i}
                    background-image url(img-url)
                    &:hover
                        background-image url(hover-img-url)   
