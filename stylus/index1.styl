@import './common.styl'
.wrap
    width 1920px
    height 1080px
    position relative
    .head
        overflow hidden
        position absolute
        top 0
        left 0
        z-index 1
        width 100%
        background url('../img/header.png') no-repeat
        background-size 100% 100%
        p
            text-align center
            font-size 34px
            font-weight bold
            font-family 'MyNewFont'
            height 90px
            line-height 90px
            color #fff
            margin 0
.left
    width 420px
    height calc(1080px - 90px)
    position absolute
    left 0
    top 90px
    padding 23px 0
    .fkzt
        height 270px
    .zdorgz
        height 335px
    >div
        height calc((1080px - 90px - 46px) / 3)
        padding 0 30px
        overflow hidden
        >.title
            margin 0
            font-size 0
            .title-triangle
                vertical-align middle
                margin-right 7px
            span
                font-size 26px
                color #6DDCFB
                font-family 'MyNewFont'
                opacity 0.5
                display inline-block
                margin-right 20px
                cursor pointer
                user-select none
                vertical-align middle
            .active
                opacity 1
        .ctx
            margin-top 20px
            .num-plate
                list-style none
                font-size 0
                padding 0
                li
                    width 37px
                    height 40px
                    font-size 24px
                    color #23D3F1
                    display inline-block
                    line-height 40px
                    text-align center
                    border 1px solid rgba(34, 223, 255, 0.4)
                    margin-right 6px
                    background rgba(34, 223, 255, 0.1)
                    &:last-child
                        margin 0
            .info-card
                list-style none
                font-size 0
                padding 0
                margin-top 18px
                li
                    width 80px
                    height 105px
                    background rgba(34, 223, 255, 0.1)
                    display inline-block
                    margin-right 10px
                    margin-bottom 9px
                    padding-top 15px
                    text-align center
                    box-sizing border-box
                    font-size 0
                    >img
                        width 28px
                        height 28px
                        margin-bottom 9px
                    >p
                        margin 0
                        color #fff
                    >.num
                        font-size 20px
                        line-height 20px
                        margin-bottom 9px
                    >.text
                        font-size 12px
                        font-weight bold
