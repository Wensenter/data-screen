    .gfxyjry
        .ctx
            .swiper-container
                height 164px
                .img-shadow
                    display block
                    position relative
                    top 50%
                    left 50%
                    transform translate(-50%,-50%)
                    width 110px
                    height 136px
                    user-select none
                    &:after
                        content ''
                        position absolute
                        top 0
                        left 0
                        width 100%
                        height 100%
                        background rgba(0,0,0,0.3)
                    img
                        width 100%
                        height 100%
                        margin auto
                        user-select none
                .swiper-slide-active
                    .img-shadow
                        position relative
                        width 132px
                        height 164px
                        z-index 1000
                        &:after
                            background transparent
            >p
                font-size 16px
                text-align center
                margin 0
                margin-bottom 12px
            .info
                color #24DFFF
                margin-top 14px
                img,span
                    vertical-align middle
            .id,.address
                color #fff
    .gfxyj
        .ctx
            .yj-list
                width 100%
                padding 0
                margin 0
                list-style none
                li
                    height 44px
                    line-height 44px
                    font-size 16px
                    color #fff
                    border-bottom 1px solid rgba(34,223,255,0.2)
                    display flex
                    justify-content space-between
                    padding 0 5px
                    box-sizing border-box
                    .text
                        display inline-block
                        width 150px
                        white-space nowrap
                        text-overflow ellipsis
                        overflow hidden
                        .no-lamp
                            display inline-block
                            overflow hidden
                        .lamp
                            display none
                            overflow hidden
                            text-overflow ellipsis
                .active
                    color #6DDCFB
                    box-shadow 0px 0px 8px rgb(0,179,254) inset
                    .text
                        overflow hidden
                        .no-lamp
                            display none
                        .lamp
                            display inline-block
