@import './common.styl'
.wrap
    width 1920px
    height 1080px
    .head
        overflow hidden
        position absolute
        top 0
        left 0
        z-index 1
        width 100%
        background url('../img/header.png') no-repeat
        background-size 100% 100%
        p
            text-align center
            font-size 34px
            font-weight bold
            font-family 'MyNewFont'
            height 90px
            line-height 90px
            color #fff
            margin 0
.left
    width 420px
    height calc(1080px - 90px)
    position absolute
    left 0
    top 90px
    padding 23px 0
    .fkzt
        height 270px
    .zdorgz
        height 335px
    >div
        height calc((1080px - 90px - 46px) / 3)
        padding 0 30px
        overflow hidden
        >.title
            margin 0
            font-size 0
            .title-triangle
                vertical-align middle
                margin-right 7px
            span
                font-size 26px
                color #6DDCFB
                font-family 'MyNewFont'
                opacity 0.5
                display inline-block
                margin-right 20px
                cursor pointer
                user-select none
                vertical-align middle
            .active
                opacity 1
        .ctx
            margin-top 20px
            .num-plate
                list-style none
                font-size 0
                padding 0
                li
                    width 37px
                    height 40px
                    font-size 24px
                    color #23D3F1
                    display inline-block
                    line-height 40px
                    text-align center
                    border 1px solid rgba(34, 223, 255, 0.4)
                    margin-right 6px
                    background rgba(34, 223, 255, 0.1)
                    &:last-child
                        margin 0
            .info-card
                list-style none
                font-size 0
                padding 0
                margin-top 18px
                li
                    width 80px
                    height 105px
                    background rgba(34, 223, 255, 0.1)
                    display inline-block
                    margin-right 10px
                    margin-bottom 9px
                    padding-top 15px
                    text-align center
                    box-sizing border-box
                    font-size 0
                    >img
                        width 28px
                        height 28px
                        margin-bottom 9px
                    >p
                        margin 0
                        color #fff
                    >.num
                        font-size 20px
                        line-height 20px
                        margin-bottom 9px
                    >.text
                        font-size 12px
                        font-weight bold
.right
    width 420px
    height calc(1080px - 90px)
    position absolute
    right 0
    top 90px
    padding 23px 0
    >div
        height calc((1080px - 90px - 46px) / 3)
        padding 0 30px
        overflow hidden
        >.title
            margin 0
            font-size 0
            overflow hidden
            line-height 30px
            .title-triangle
                vertical-align middle
                margin-right 7px
            span
                font-size 26px
                color #6DDCFB
                font-family 'MyNewFont'
                opacity 0.5
                display inline-block
                margin-right 20px
                cursor pointer
                user-select none
                vertical-align middle
            .active
                opacity 1
            a
                font-size 16px
                color #24DFFF
                float right
        .ctx
            margin-top 20px
    .gfxyjry
        .ctx
            .swiper-container
                height 164px
                .img-shadow
                    position relative
                    top 50%
                    left 50%
                    transform translate(-50%,-50%)
                    width 110px
                    height 136px
                    &:after
                        content ''
                        position absolute
                        top 0
                        left 0
                        width 100%
                        height 100%
                        background rgba(0,0,0,0.3)
                    img
                        width 100%
                        height 100%
                        margin auto
                        user-select none
                .swiper-slide-active
                    .img-shadow
                        position relative
                        width 132px
                        height 164px
                        z-index 1000
                        &:after
                            background transparent
            >p
                font-size 16px
                text-align center
                margin 0
                margin-bottom 12px
            .info
                color #24DFFF
                margin-top 14px
            .id,.address
                color #fff
    .gfxyj
        .ctx
            .yj-list
                width 100%
                padding 0
                margin 0
                list-style none
                li
                    height 44px
                    line-height 44px
                    font-size 16px
                    color #fff
                    border-bottom 1px solid rgba(34,223,255,0.2)
                    display flex
                    justify-content space-between
                    padding 0 5px
                    box-sizing border-box
                    .text
                        display inline-block
                        width 150px
                        white-space nowrap
                        text-overflow ellipsis
                        overflow hidden
                        .no-lamp
                            display inline-block
                            overflow hidden
                        .lamp
                            display none
                            overflow hidden
                            text-overflow ellipsis
                .active
                    color #6DDCFB
                    .text
                        overflow hidden
                        .no-lamp
                            display none
                        .lamp
                            display inline-block
    .fkld
        overflow visible
